<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/defaut_avt" />
    <TextView
        android:id="@+id/messReceiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:background="@drawable/background_retrieve_mess"
        android:text="abc"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/messSendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/messReceiText"
        android:background="@drawable/background_send_mess"
        android:text="bca"
        android:padding="10dp"
        android:textStyle="normal"
        android:textColor="#000000"

        />
</RelativeLayout>