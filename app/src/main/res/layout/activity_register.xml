<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/sexo_re"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:background="@drawable/background_edt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="232dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@font/a"
                    android:text="Đăng ký"
                    android:textSize="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="104dp" />

                <EditText
                    android:id="@+id/tendangnhap"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="44dp"
                    android:background="#e4e4e4"
                    android:hint="  Tên đăng nhập"
                    android:inputType="textPersonName"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:layout_editor_absoluteX="0dp" />

                <EditText
                    android:id="@+id/matkhau"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="#e4e4e4"
                    android:hint="  Mật khẩu"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@+id/tendangnhap"
                    tools:layout_editor_absoluteX="44dp" />

                <EditText
                    android:id="@+id/xacnhanmk"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="#e4e4e4"
                    android:hint="  Xác nhận mật khẩu"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@+id/matkhau"
                    tools:layout_editor_absoluteX="44dp" />

                <EditText
                    android:id="@+id/ngaysinh"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="#e4e4e4"
                    android:ems="10"
                    android:hint="  Ngày Sinh(dd/mm/yyyy)"
                    android:inputType="datetime"
                    app:layout_constraintTop_toBottomOf="@+id/xacnhanmk"
                    tools:layout_editor_absoluteX="44dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="36dp"
                    android:text="Giới tính"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ngaysinh" />

                <RadioGroup
                    android:id="@+id/gt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/ngaysinh">

                    <RadioButton
                        android:id="@+id/gtnam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/gtnu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nữ" />

                    <RadioButton
                        android:id="@+id/gtkhac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Khác" />
                </RadioGroup>


                <Button
                    android:id="@+id/huydk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Hủy"
                    android:textColor="#fff"
                    android:background="@drawable/background_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gt" />

                <Button
                    android:id="@+id/xacnhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Xác nhận"
                    android:textColor="#fff"
                    android:background="@drawable/background_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gt" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="TextView"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/xacnhan"
                    tools:layout_editor_absoluteX="146dp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>